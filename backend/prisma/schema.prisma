  updatedAt    DateTime  @updatedAt
  userSession  UserSession @relation(fields: [userSessionId], references: [id])
  competence   Competence @relation(fields: [competenceId], references: [id])

  @@unique([userSessionId, competenceId, date]) // Max 1 analyse par jour par compétence
}

