  type        CompetenceType @unique
  name        String
  description String
  icon        String?
  color       String?
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
  exercises   Exercise[]
  assessments CompetenceAssessment[]
  bubixAnalyses BubixAnalysis[]
}

model Exercise {
  id           String         @id @default(cuid())
  competenceId String
  title        String
  description  String
  type         ExerciseType
  difficulty   Int            @default(1) // 1-5
  estimatedTime Int           @default(10) // minutes
  instructions Json?          // Instructions détaillées
  content      Json?          // Contenu de l'exercice
  solution     Json?          // Solution/réponse attendue
  isActive     Boolean        @default(true)
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
  competence   Competence     @relation(fields: [competenceId], references: [id])
  attempts     ExerciseAttempt[]

  @@unique([competenceId, title])
}

model ExerciseAttempt {
  id           String    @id @default(cuid())
  exerciseId   String
  userSessionId String
  score        Float     @default(0) // Score obtenu (0-100)
  timeSpent    Int       @default(0) // Temps passé en secondes
  answers      Json?     // Réponses données
  feedback     Json?     // Feedback reçu
  completedAt  DateTime?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  exercise     Exercise  @relation(fields: [exerciseId], references: [id])
  userSession  UserSession @relation(fields: [userSessionId], references: [id])
}

model CompetenceAssessment {
  id           String    @id @default(cuid())
  competenceId String
  userSessionId String
  score        Float     @default(0) // Score global de la compétence (0-10)
  level        String    @default("Débutant") // Niveau atteint
  progress     Float     @default(0) // Progression (0-100)
  lastUpdated  DateTime  @default(now())
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  competence   Competence @relation(fields: [competenceId], references: [id])
  userSession  UserSession @relation(fields: [userSessionId], references: [id])

  @@unique([competenceId, userSessionId])
}

model BubixAnalysis {
  id           String    @id @default(cuid())
  userSessionId String
  competenceId String
  analysis     String    // Analyse générée par Bubix
